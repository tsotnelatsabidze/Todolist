@model TodoListApp.WebApi.Models.Models.TodoTaskDto
@{
    ViewBag.Title = "TodoTask Details";
}
<div class="container">
    <h2>TodoTask Details</h2>
    <div>
        <dl class="dl-horizontal">
            <dt>@Html.DisplayNameFor(model => model.Title)</dt>
            @Html.DisplayFor(model => model.Title)

            <dt>@Html.DisplayNameFor(model => model.Description)</dt>
            <dd>@Html.DisplayFor(model => model.Description)</dd>

            <dt>@Html.DisplayNameFor(model => model.DueDate)</dt>
            <dd>@Html.DisplayFor(model => model.DueDate)</dd>

            <dt>@Html.DisplayNameFor(model => model.CreateDate)</dt>
            <dd>@Html.DisplayFor(model => model.CreateDate)</dd>
        </dl>
    </div>
    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, htmlAttributes: new { @class = "btn btn-primary" })
        @Html.ActionLink("Back to Task", "Edit", "TodoTask", new {Id = Model.Id}, htmlAttributes: new { @class = "btn btn-info" })
    </p>
</div>